<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e5f5"
    tools:context="com.ankesh.instasplit.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/logo1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:inputType="textPersonName"
        android:hint="First Name"

        android:textColorHint="#000000"

        android:layout_below="@+id/imageView" />
    <EditText
        android:id="@+id/reg_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:inputType="textPersonName"
        android:hint="Last Name"

        android:textColorHint="#000000"

        android:layout_below="@+id/reg_name" />


    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignEnd="@+id/reg_name"
        android:hint="Email"
        android:layout_below="@+id/reg_last_name"

        android:textColorHint="#000000"

        android:layout_alignStart="@+id/reg_name" />

    <EditText
        android:id="@+id/reg_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"

        android:textColorHint="#000000"
        android:layout_alignEnd="@+id/reg_name"
        android:inputType="textPersonName"
        android:hint="Mobile Number"

        android:layout_below="@+id/reg_email"
        android:layout_alignStart="@+id/reg_email" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reg_name"
        android:layout_alignStart="@+id/reg_email"
        android:layout_below="@+id/reg_mobile"
        android:layout_marginTop="30dp"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="Password"

        android:inputType="textPassword" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/reg_password"
        android:layout_alignStart="@+id/reg_email"
        android:text="Register"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"

        android:layout_alignEnd="@+id/reg_password" />

</RelativeLayout>
