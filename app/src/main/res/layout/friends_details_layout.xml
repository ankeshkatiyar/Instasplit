<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fd_date"
        android:layout_width="0dp"
        android:layout_height="20sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-50dp"
        android:paddingLeft="16dp"
        android:text="26 March"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#3333"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/fd_displaypic"
        android:layout_width="67dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/ankesh"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fd_date" />

    <TextView
        android:id="@+id/fd_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="Credit house"
        app:layout_constraintLeft_toRightOf="@+id/fd_displaypic"
        app:layout_constraintTop_toBottomOf="@+id/fd_date" />

    <TextView
        android:id="@+id/fd_group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Shared group"
        app:layout_constraintLeft_toRightOf="@+id/fd_displaypic"
        app:layout_constraintTop_toBottomOf="@+id/fd_group_name" />

    <TextView
        android:id="@+id/fd_owe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you owe"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fd_date"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/fd_money_owed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="120 "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fd_owe" />
</android.support.constraint.ConstraintLayout>