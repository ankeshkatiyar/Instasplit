<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    

    <ImageView
        android:id="@+id/gd_displaypic"
        android:layout_width="67dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/ankesh"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/gd_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="Water Bottle"
        app:layout_constraintLeft_toRightOf="@+id/gd_displaypic"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/gd_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:text="You paid 120"
        app:layout_constraintLeft_toRightOf="@+id/gd_displaypic"
        app:layout_constraintTop_toBottomOf="@+id/gd_description" />

    <TextView
        android:id="@+id/gd_lentorborrowed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you borrowed"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/gd_moneylentorborrowed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="40 "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gd_lentorborrowed" />

    <TextView
        android:id="@+id/gd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:text="26 March"
        app:layout_constraintLeft_toRightOf="@+id/gd_displaypic"
        app:layout_constraintTop_toBottomOf="@+id/gd_paid" />
</android.support.constraint.ConstraintLayout>