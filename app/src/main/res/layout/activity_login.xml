<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background"
    >

    <EditText
        android:id="@+id/email_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/input_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/password_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/email_view"
        android:layout_alignEnd="@+id/email_view"
        android:background="@drawable/input_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#ffea00"
        android:textColorHint="#ffffff" />


    <Button
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"

        android:text="Login"

        android:layout_below="@+id/password_view"
        android:layout_alignStart="@+id/email_view"
        android:layout_alignEnd="@+id/email_view"/>


    <Button
        android:id="@+id/reg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_view"
        android:background="@drawable/button_background"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/email_view"
        android:layout_alignEnd="@+id/email_view"
        android:text="Register"
        android:textColor="#ffffff"/>

    <TextView

        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_view"
        android:layout_alignStart="@+id/email_view"
        android:layout_marginStart="71dp"
        android:background="@android:color/transparent"
        android:text="InstaSplit"
        android:textSize="50dp"
        android:textColor="#ffffff"
         />


</RelativeLayout>
